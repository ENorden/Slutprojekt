@model VeganCategoryVM[]
@{ ViewBag.Title = "Recipe Category";}
@section styles
{<link rel="stylesheet" type="text/css" href="~/styles/posts.css" />}

<partial name="~/Views/Shared/_Header.cshtml" />


<h1 class="h2 mb-3 font-weight-normal text-center">@Model[0].CategoryName</h1>

<div class="container">
    @foreach (var item in Model)
    {
    <div class="border thumbnail row">
        <div class="container-header">
            <img src="~/Uploads/@item.Img" alt="category" class="rounded-circle img-fluid">
            <h2>Username</h2>
        </div>
        <div class="container-img">
            <img src="~/Uploads/@item.Img" alt="category" class="img-fluid">
        </div>
        <div class="container-details">
            <a asp-controller="Vegan" asp-action="Details" asp-route-id="@item.Id">
                <h2 class="h4 mb-3 font-weight-bold">
                    @item.Title
                </h2>
            </a>
        </div>
    </div>
    }
</div>

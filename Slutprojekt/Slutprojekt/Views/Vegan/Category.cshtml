@model VeganCategoryVM[]
@{ ViewBag.Title = "Recipe Category";}
@section styles
{<link rel="stylesheet" type="text/css" href="~/styles/posts.css" />}

<partial name="~/Views/Shared/_Header.cshtml" />

@if (Model.Length > 0)
{
    <h1 class="h2 mb-3 font-weight-normal text-center">@Model[0].CategoryName[0]</h1>

    <div class="container">
        @foreach (var item in Model)
        {
        <div class="border thumbnail row">
            <div class="container-header">
                <div>
                    <img src="~/Uploads/@item.UserImg" alt="category" class="rounded-circle img-fluid">
                    <h2>@item.Username</h2>
                </div>
            </div>
            <div class="container-img">
                <img src="~/Uploads/@item.Img" alt="category" class="img-fluid">
            </div>
            <a asp-controller="Vegan" asp-action="Details" asp-route-id="@item.Id">
                <div class="container-details">
                    <h2 class="h4 mb-3">
                        @item.Title
                    </h2>
                    <div class="category">
                        @foreach (var cat in item.CategoryName)
                        {
                            <p>@cat</p>
                        }
                    </div>
                </div>
            </a>
        </div>
        }
    </div>
}
else
{
    <h1 class="h2 mb-3 font-weight-normal text-center">There is no recipes in this category</h1>
}

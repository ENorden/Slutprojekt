@model VeganProfileVM

<div class="d-flex justify-content-center" style="margin-top: 50px;">

    <div>
        <img src="~/Uploads/@Model.PictureURL" style="width: auto; height: 150px;" class="rounded-circle" alt="Cinque Terre" />
    </div>

    <div class="profile-info d-flex flex-column justify-content-between">
        <div class="d-flex align-items-center">
            <h3>@Model.UserName</h3>
            <span class="cog-span ml-4">
                <i class="fas fa-user-cog"></i>
            </span>
            <a class="btn btn-default border ml-4" asp-controller="vegan" asp-action="editprofile">Edit Profile</a>
        </div>

        <div class="d-flex">
            <span><b>@Model.Posts</b>&nbsp;Posts</span>
            <span class="ml-4"><b>@Model.Followers</b>&nbsp;Followers</span>
            <span class="ml-4"><b>@Model.Following</b>&nbsp;Following</span>
        </div>

        <div class="profile-description">
            @Model.Description
        </div>
    </div>


</div>




